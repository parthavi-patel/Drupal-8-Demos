<div class="row">
  <div class="col s12 m7">
    <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          {{fields['field_image'].content}}
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{fields['title'].content}}<i class="material-icons right">Show Hash</i></span>
          <p>{{fields['body'].content}}</p>
          <p>{{fields['view_node'].content}}</p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{fields['title'].content}}<i class="material-icons right">close</i></span>
          <p>{{hash}}</p>
        </div>
      </div>
  </div>
</div>